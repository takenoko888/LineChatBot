# Koyeb環境用設定例
# このファイルをコピーして .env として使用し、実際の値を設定してください

# 必須設定
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_ACCESS_TOKEN=your_line_access_token_here
GEMINI_API_KEY=your_gemini_api_key

# Koyeb本番環境設定
PRODUCTION_MODE=true
KOYEB_INSTANCE_URL=your-app-name.koyeb.app
PORT=8000

# 通知システム設定
NOTIFICATION_CHECK_INTERVAL=30
NOTIFICATION_STORAGE_PATH=/tmp/notifications.json
PERSISTENT_STORAGE_ENABLED=true

# オプション設定（必要に応じて設定）
WEATHER_API_KEY=your_weather_api_key
GOOGLE_API_KEY=your_google_api_key
SEARCH_ENGINE_ID=your_search_engine_id

# ログ設定
LOG_LEVEL=INFO
DEBUG=false

# パフォーマンス設定
MAX_MESSAGE_LENGTH=5000
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# セキュリティ設定
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=10

# データ永続化設定（デプロイ時のデータ保持）
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=your_username/your_repository_name
BACKUP_BRANCH=data-backup 